---
import HtmlDocument from "$/layout/HtmlDocument.astro"
import PuzzleIcon from "~icons/game-icons/jigsaw-piece"

const types = [
  { type: "medium", title: "後ろに動詞が続くフレーズ", desc: "基本的な英文を作るブロック、まずはここから" },
  { type: "large", title: "後ろに文章が続くフレーズ", desc: "長い文章を作るためのブロック" },
  { type: "small", title: "具体的な情報を示すフレーズ", desc: "ブロックに埋めて使う、動詞・名詞・形容詞" },
  { type: "more", title: "細かいニュアンスを加えるフレーズ", desc: "なくても文章は成り立つ" },
  { type: "single", title: "単体で成り立つフレーズ", desc: "そのまま使える" }
]
---

<HtmlDocument title="cgmonolog-english">
  <div class="container">
    <header class="header">
      <h1 class="PieceTitle">cgmonolog-english</h1>
      <p class="subtitle">英語でつぶやく「CGエンジニアのひとり言」</p>
    </header>
    <section class="section study-section">
      <h2>Let's study</h2>
      <ul>
        {
          types.map(({ type, title, desc }) => (
            <li class={`--${type}`}>
              <div class="study-item">
                <a href={`/${type}`}>
                  <PuzzleIcon />
                  {title}
                </a>
                <span class="study-item-desc">{desc}</span>
              </div>
            </li>
          ))
        }
      </ul>
    </section>
    <!-- <ul class="PieceList">
      {
        pieces.map((piece) => (
          <li>
            <a href={`/${piece.id}`} class={`--${piece.data.type} PieceLink`}>
              <PuzzleIcon />
              <span class="PieceLink-text">{piece.data.shape}</span>
            </a>
          </li>
        ))
      }
    </ul> -->
    <section class="section nav-section">
      <h2>Let's look for</h2>
      <ul>
        <li>
          <a href="/from-en">アルファベット順で探す</a>
        </li>
        <li>
          <a href="/from-ja">日本語から探す</a>
        </li>
      </ul>
    </section>
  </div>
</HtmlDocument>

<style>
  :is(h1, h2) {
    margin: 0;
    font-weight: 400;
  }

  .container {
    display: grid;
    gap: 3rem;
    padding-block: 3rem;
  }

  .header {
    display: grid;
    gap: 1rem;
    padding-inline: 1rem;
  }
  .PieceTitle {
    padding-inline: 1rem;
    padding-block: 0;
    text-align: center;
    font-size: 1.875rem;
    line-height: 2.25rem;
  }
  .subtitle {
    margin: 0;
    font-size: clamp(0.9rem, 0.756rem + 0.614vw, 1.1rem);
    text-align: center;
    word-break: auto-phrase;
  }

  .section {
    display: grid;
    place-items: center;
    gap: 2rem;
  }
  .section ul {
    margin: 0;
    line-height: 1.7;
    font-size: 0.95rem;
    padding-inline-start: 1rem;
  }
  .section a {
    text-decoration: none;
    color: currentColor;
  }

  .study-section ul {
    list-style: none;
    display: grid;
    gap: 1rem;
    padding-inline: 0;
  }

  .study-item {
    display: grid;
    gap: 0.25rem;
    line-height: 1.7;
    font-size: 1.1rem;
  }
  .study-item a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration-line: underline;
    text-decoration-style: dashed;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
  }
  .study-item :global(svg) {
    flex-shrink: 0;
  }
  .study-item-desc {
    font-size: 0.9rem;
    color: var(--slate-500);
  }

  .nav-section a {
    color: var(--slate-500);
  }
</style>
