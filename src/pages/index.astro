---
import HtmlDocument from "$/layout/HtmlDocument.astro"
import PuzzleIcon from "~icons/game-icons/jigsaw-piece"
import { getPieces } from "$/lib/collection"

const pieces = await getPieces()
---

<HtmlDocument title="cgmonolog-english">
  <div class="container">
    <header class="header">
      <h1 class="PieceTitle">cgmonolog-english</h1>
      <p class="subtitle">英語でつぶやく「CGエンジニアのひとり言」</p>
    </header>
    <ul class="PieceList">
      {
        pieces.map((piece) => (
          <li>
            <a href={`/${piece.id}`} class={`--${piece.data.type} PieceLink`}>
              <PuzzleIcon />
              <span class="PieceLink-text">{piece.data.shape}</span>
            </a>
          </li>
        ))
      }
    </ul>
    <nav class="nav">
      <ul>
        <li>
          <a href="/from-en">アルファベット順で探す</a>
        </li>
        <li>
          <a href="/from-ja">日本語から探す</a>
        </li>
      </ul>
    </nav>
  </div>
</HtmlDocument>

<style>
  .container {
    display: grid;
    gap: 3rem;
    padding-block: 3rem;
  }

  .header {
    display: grid;
    gap: 1rem;
    padding-inline: 1rem;
  }
  .PieceTitle {
    padding-inline: 1rem;
    padding-block: 0;
    margin: 0;
    text-align: center;
    font-size: 1.875rem;
    line-height: 2.25rem;
    font-weight: 400;
  }
  .subtitle {
    margin: 0;
    font-size: clamp(0.9rem, 0.756rem + 0.614vw, 1.1rem);
    text-align: center;
    word-break: auto-phrase;
  }

  .nav {
    display: grid;
    place-items: center;
  }
  .nav ul {
    margin: 0;
    line-height: 1.7;
    font-size: 0.95rem;
    padding-inline-start: 1rem;
  }
  .nav a {
    color: var(--slate-500);
    text-decoration: none;
  }

  .PieceList {
    list-style: none;
    margin-block: 0;
    margin-inline: auto;
    display: flex;
    width: fit-content;
    flex-wrap: wrap;
    column-gap: 2rem;
    row-gap: 1rem;
    padding-inline: 2rem;
  }
  .PieceLink {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: clamp(1rem, 0.82rem + 0.768vw, 1.25rem);
    line-height: 1.7;
    text-decoration-line: underline;
    text-decoration-style: dashed;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
  }
  .PieceLink :global(svg) {
    flex-shrink: 0;
  }
  .PieceLink-text {
    color: var(--slate-500);
    text-wrap: balance;
  }

  .--large {
    color: var(--rose-400);
  }
  .--medium {
    color: var(--green-400);
  }
  .--small {
    color: var(--sky-400);
  }
  .--single {
    color: var(--orange-400);
  }
  .--more {
    color: var(--violet-400);
  }
  .--word {
    color: var(--slate-300);
  }
</style>
