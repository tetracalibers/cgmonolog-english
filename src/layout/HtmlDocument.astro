---
import Favicon from "./Favicon.astro"

import "$/styles/tailwind-colors.css"

interface Props {
  title: string
}

const { title } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <Favicon />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@200..900&family=Ysabeau+Infant:ital,wght@0,1..1000;1,1..1000&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <div class="Main"><slot /></div>
  </body>
</html>

<style>
  body {
    font-family: "Ysabeau Infant", "Noto Serif JP";
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    color: rgb(72, 84, 97);
    margin: 0;
  }

  .Main {
    margin-inline: auto;
    max-width: 56rem;
  }
</style>
